<h1>User info</h1>

<%= form_with(model: @user, url: user_path(@user), method: :patch) do |form| %>
  <%= form.label :name %>
  <%= form.text_field :name %>

  <%= form.label :image %>
  <%= form.file_field :image %>

  <%= form.label :introduction %>
  <%= form.text_area :introduction %>

  <%= form.submit "Update user" %>
<% end %>
