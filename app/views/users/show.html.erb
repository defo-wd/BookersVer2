<%= render "users/user_info", user: @user %>
<%= render "books/new", book: @book %>

<h2>Books</h2>

<% if @user.books.any? %>
  <ul>
    <% @user.books.each do |book| %>
      <p><%= link_to image_tag(book.user.get_profile_image(100, 100), class: "profile-image"), user_path(book.user) %></p>
      <li><%= link_to book.title, book_path(book) %></li>
      <p><%= book.body %></p>
    <% end %>
  </ul>
<% else %>
  <p>No books found.</p>
<% end %>
